<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <%= will_paginate %>

  <ul class="users">
    <% @users.each do |user| %>
        <li>
          <%= link_to user.id, user %>
          <%= gravatar_for user %>
          <%= link_to user.name, user %>
        </li>
    <% end %>
  </ul>

  <%= will_paginate %>

  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
